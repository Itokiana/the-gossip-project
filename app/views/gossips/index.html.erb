<div class="center jumbotron">
  <h1>Liste de tous les gossips !</h1>
</div>
<div class="shadow mt-5 p-5 bg-light">
  <table class="table table-striped table-dark">
    <thead>
      <tr class="bg-primary">
        <th scope="col">#</th>
        <th scope="col">Auteur</th>
        <th scope="col">Contenu</th>
        <th scope="col"></th>
      </tr>
    </thead>
    <tbody>

      <%=%>
    
      <% @gossips.each do |g| %>
      <tr>
        <th scope="row"><%= g.id%></th>
        <td><%= g.anonymous_author%></td>
        <td><%= g.content%></td>
        <td><%= link_to "Voir", gossip_path(g), class: 'btn btn-primary' %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>
